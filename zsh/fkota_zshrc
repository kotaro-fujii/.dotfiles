export WORDCHARS='*?_-.~!#$%^'

alias c='cd'

alias b='cd ../'

alias l.='ls -d .*'
alias ll='ls -Al'
alias la='ls -A'
alias lr='ls -R'

alias wl='wc -l'

alias zz='source ~/.zshrc'

# aliases to execute application
alias e='explorer.exe'
alias py='python'
alias lltx='lualatex'
alias nv='nvim'
alias tm='tmux'
alias em='emacs -nw'

export PATH=$HOME/.bin:$PATH


if [ -e $ZSH_CUSTOM/local.sh ]; then
    source $ZSH_CUSTOM/local.sh
fi
